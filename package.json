{
    "name": "durable-utils",
    "version": "0.0.1",
    "description": "Utilities for Cloudflare Durable Objects and Workers.",
    "files": [
        "dist/*",
        "README.md",
        "LICENSE"
    ],
    "module": "dist/index.esm.js",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "fmt": "npx prettier . --check --write --ignore-unknown",
        "gen:types": "tsc --emitDeclarationOnly",
        "prebuild": "npx shx rm -rf ./dist",
        "build": "node --experimental-modules ./tools/build.mjs",
        "test": "vitest --run",
        "release": "npm test && npm run build && npm run gen:types"
    },
    "keywords": [
        "cloudflare",
        "durable",
        "objects",
        "workers"
    ],
    "author": "Lambros Petrou (lambrospetrou.com)",
    "license": "MIT",
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.5.21",
        "@cloudflare/workers-types": "^4.20241022.0",
        "esbuild": "^0.24.0",
        "prettier": "^3.3.3",
        "shx": "^0.3.4",
        "typescript": "^5.6.3",
        "vitest": "^2.1.3"
    }
}
