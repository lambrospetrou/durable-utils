{
  "name": "durable-utils",
  "version": "0.0.1",
  "description": "Utilities for Cloudflare Durable Objects and Workers.",
  "files": [
    "dist/*"
  ],
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "fmt": "",
    "gen:types": "tsc --emitDeclarationOnly",
    "prebuild": "npx shx rm -rf ./dist",
    "build": "node --experimental-modules ./tools/build.mjs",
    "test": "vitest --run",
    "release": "npm run build && npm run gen:types"
  },
  "keywords": [
    "cloudflare",
    "durable",
    "objects",
    "workers"
  ],
  "author": "Lambros Petrou (lambrospetrou.com)",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "shx": "^0.3.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 120
  }
}