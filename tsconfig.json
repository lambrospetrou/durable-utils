{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "dist", "**/*.test.ts", "test"]
}
